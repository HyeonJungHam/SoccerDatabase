<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.soccerdb.oldschool.db.dao.ClubDAO">
 	<resultMap id="result" type="Club">
 		<!-- Instance of Entity and Attributes of Relation need to be delclared HERE! -->  
 		<result property="club_id" column="club_id"/>
 		<result property="club_fullname" column="club_fullname"/>
 		<result property="club_ground" column="club_ground"/>
 		<result property="club_nickname" column="club_nickname"/>
 		<result property="club_owner" column="club_owner"/>
        <result property="club_chairman" column="club_chairman"/>
        <result property="club_manager" column="club_manager"/>
        <result property="club_logo" column="club_logo"/>
 	</resultMap>
 	
 	<select id="selectAll" resultMap="result">
 		<!--SELECT * FROM "Relation";-->
 		SELECT * FROM Club; 
 	</select>
 	
 	<select id="selectById" parameterType="int" resultMap="result">
 		<!--SELECT * FROM "Relation" WHERE ???;-->
 		SELECT * FROM Club WHERE club_id = #{club_id};
 	</select>
 	
 	<insert id="insert" parameterType="Club" useGeneratedKeys="true" keyProperty="id">
 		<!-- insert into "Relation"  ("attribute name of relation" , ... , ???)
 		values "instace name of entity" , ... , "instace name of entity" -->
 		insert into Club(club_id,fullname,ground,nickname,owner,chairman,manager,logo)
 		values (#{club_id},#{fullname},#{ground},#{nickname},#{owner},#{chairman},#{manager},#{logo}); 
 	</insert>
 	
 	<update id="update" parameterType="Club">
 		<!--UPDATE "Relation"
 		SET "attribute name of relation" = #{"instace name of entity"}
 		WHERE "attribute name of relation" = #{"instace name of entity"};-->
 		UPDATE Club
 		SET name = (#{club_fullname})
 		WHERE club_id = #{club_id};
 	</update>
 	
 	<delete id="delete" parameterType="int">
 		<!-- DELETE FROM "Relation" WHERE "attribute name of relation" = #{"instace name of entity"}; -->
 		DELETE FROM Club WHERE club_id = #{club_id};
 	</delete>
 </mapper>