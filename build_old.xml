<?xml version="1.0"?>

<project name="ant.oldschool.soccerdb" default="main" basedir=".">
    <property name="Name" value="SoccerDB"></property>
    <property name="name" value="soccerdb"></property>
    <property name="groupid" value="com.soccerdb.oldschool"></property>
    <property name="project.version" value="1.0.0"></property>
    
    <property name="src.dir" value="java/src"></property>
    <property name="build.dir" value="build"></property>
    <property name="classes.dir" value="${build.dir}/bin"></property>
    <property name="classpath" value="java.libs"/>
    <target name="clean">
        <delete dir="${build.dir}"></delete>
    </target>
    <target name="init">
        <mkdir dir="${build.dir}"></mkdir>
        <mkdir dir="${classes.dir}"></mkdir>
    </target>
    <target name="compile" depends="init">
        <javac 
            srcdir="${src.dir}" 
            destdir="${classes.dir}" 
            classpath="${classpath}.mybatis-3.5.1.jar:${classpath}.mysql-connector-java-8.0.15.jar"
            includeantruntime="false">
        </javac>
    </target>
    <target name="main" depends="clean,compile">
        <java classpath="${classes.dir}" classname="${groupid}.main.MainClass">
        </java>
    </target>
</project>